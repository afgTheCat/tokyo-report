{
  "editor.wordWrap": "on",
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk with cleanup",
      "tools": ["latexmk", "cleanup"]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-shell-escape",
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "-outdir=%OUTDIR%",
        "%DOC%"
      ]
    },
    {
      "name": "cleanup",
      "command": "./cleanup.sh"
    }
  ]
}
